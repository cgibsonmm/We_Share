<div class="ui grid">
    <div class='eight wide column user'>
        <h2>Log in</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'ui form'}) do |f| %>
        <div class="eight wide field">
            <%= f.label :email %><br/>
            <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="eight wide field">
            <%= f.label :password %><br/>
            <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
        <div class="eight wide field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
        </div>
        <% end -%>

        <div class="actions">
            <%= f.button 'Submit', class: 'ui positive button', data: {disable_with: "<div class='ui active tiny inline loader'></div> Logging In"} %>
        </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>
