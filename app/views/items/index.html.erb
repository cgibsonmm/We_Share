<div class="index-page">
  <table id="index" class="ui table">
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
      <th>Updated at</th>
      <th>Options</th>
    </tr>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.item_type %></td>
      <td><%= item.item_description %></td>
      <td><%= item.updated_at %></td>
      <td class="selectable box"><%= link_to 'Show', item_path(item) %></td>
    </tr>
    <% end %>
  </table>
</div>
